{% if section.settings.hero_img != blank %}
<div class="hero-banner">
  <img src="{{ section.settings.hero_img|img_url:'master'}}" alt="{{ section.settings.heading }}" class="hyland_desktop_mobile">
    {% if section.settings.hero_mobile != blank %}    
    <img src="{{ section.settings.hero_mobile | img_url:'master'}}" alt="{{ section.settings.heading }}" class="hyland_banner_mobile">
    {% endif %}  
  <div class="hero-text-box">
    {% if section.settings.hero_heading != blank %}    
      <h1 class="banner__heading h1">
        {{ section.settings.hero_heading | escape }}
      </h1>
    {% endif %}
    {% if section.settings.hero_sub_heading != blank %}    
      <p class="banner__subheading">
        {{ section.settings.hero_sub_heading }}
      </p>  
    {% endif %}
    {% if section.settings.hero_button != blank %}  
          <a class="hero-button" href="{{section.settings.hero_btn_url}}">{{section.settings.hero_button}}</a>
    {% endif %}
  </div>
</div>
{% endif %}
<style>
  .hero-button{
    background: {{section.settings.hero_btn_color}}!important;
    color: {{section.settings.hero_btn_h_color}}!important;
  }
  .hero-button:hover{
    color: {{section.settings.hero_btn_color}}!important;
    background: {{section.settings.hero_btn_h_color}}!important;
  }
</style>
{% schema %}
{
  "name": "Hero Banner",
  "class": "hero-banner-main",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_img",
      "label": "Banner Image"
    },
    {
      "type": "image_picker",
      "id": "hero_mobile",
      "label": "Mobile Banner Image"
    },
    {
      "type": "text",
      "id": "hero_heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "hero_sub_heading",
      "label": "Sub Heading"
    },
    {
      "type": "text",
      "id": "hero_button",
      "label": "Button Text"
    },
    {
      "type": "text",
      "id": "hero_btn_url",
      "label": "Button URL"
    },
    {
      "type": "text",
      "id": "hero_btn_color",
      "label": "Button Color"
    },
    {
      "type": "text",
      "id": "hero_btn_h_color",
      "label": "Button Hover Color"
    }
  ],
   "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
