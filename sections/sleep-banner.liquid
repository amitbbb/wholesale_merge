{% if section.settings.hero_heading != blank %}
<div class="sleep-banner">
  <h1>{{section.settings.hero_heading}}</h1>
  <p>{{section.settings.hero_sub_heading}}</p>
</div>
{% endif %}
{% schema %}
{
  "name": "Sleep Banner",
  "class": "sleep-banner-main",
  "settings": [
    {
      "type": "text",
      "id": "hero_heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "hero_sub_heading",
      "label": "Sub Heading"
    }
  ],
   "presets": [
    {
      "name": "Sleep Banner"
    }
  ]
}
{% endschema %}
