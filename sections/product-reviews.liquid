{% if section.settings.heading != blank %}
<h2>{{ section.settings.heading }}</h2>
<!--Yotpo Reviews Widget-->
<div class="yotpo yotpo-main-widget" style="max-width:1800px; margin:auto"
data-product-id="{{ product.id }}"
data-name="{{ product.title | escape }}"
data-url="{{ shop.url }}{{ product.url }}"
data-image-url="{{ product.featured_image | product_img_url: 'large' |replace: '?', '%3F' | replace: '&','%26'}}"
data-price="{{ variant.price | money_without_currency }}"
data-currency="{{ shop.currency }}"
data-description="{{ product.description | escape }}">
</div>
<!--End of Yotpo Reviews Widget-->
{% endif %}

{% schema %}
  {
    "name": "Product Reviews",
	"tag": "section",
  	"class": "product-reviews",
    "settings": [
		{
          "type": "text",
          "id": "heading",
          "label": "Reviews"
		}
	]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
$(window).on("load resize", function(){
	if($(window).width() < 750) {
		$(".inline-review-stars").insertAfter(".productTitleWrap");
	}
	else {
		if($(".product__info-container .inline-review-stars").length < 1) {
			$(".inline-review-stars").prependTo(".product__info-container");
		}
	}
});  
{% endjavascript %}
