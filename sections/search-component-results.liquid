{%- if predictive_search.performed -%}
  {%- for product in predictive_search.resources.products -%}
  {%- comment -%}{% include 'product-card', product_card_product: product  %}{%- endcomment -%}
  
  
  <div class="search-component__grid-item" role="option">
      <a href="{{ product.url }}">
        {%- if product.featured_media != blank -%}
          <img class="search-component__image" src="{{ product.featured_media | img_url: '500x' }}" alt="{{ product.featured_media.alt }}" width="400" height="400">
        {%- endif -%}
        <div class="search-component__description btn-product-card" data-id="{{product_card_product.selected_or_first_available_variant.id}}">
          <h3 class="search-component__product-title">
            ADD TO BAG â€” &nbsp; ${{ product.price | money_without_currency }}
          </h3>
        </div>
      </a>
    </div>

  {%- endfor -%}
{%- else -%}
    
{%- endif -%}