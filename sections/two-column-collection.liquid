{% if section.settings.sec_head != blank %}
  <img src="{{ section.settings.center_img | img_url: 'master' }}" class="cartoon-center" alt="" />
  <h2>{{ section.settings.sec_head }}</h2>
<div class="collection-cards-wrapper">
      {% for block in section.blocks %}
      <div class="collection-cards">
            <a href="{{ block.settings.btn_url }}">
              <img src="{{ block.settings.bg_img | img_url: 'master' }}" alt="" />
              <div class="content-wrap">
                <h2>{{ block.settings.block_heading }}</h2>
                <h3>{{ block.settings.btn_label }}</h3>
              </div>
            </a>
      </div>
     {% endfor %}
</div>
{% endif %}
{% schema %}
{
  "name": "Collection Two Column",
  "class": "two-column-collection-card",
  "max_blocks": 2,
  "settings": [
  {
    "type": "image_picker",
    "id": "center_img",
    "label": "Cartoon Image"
  },    
  {
    "type": "text",
    "id": "sec_head",
    "label": "Heading"
  }   
  ],
  "blocks": [
  {
	"type": "card",
	"name": "Collection Info",
	"settings": [     
	    {
          "type": "image_picker",
          "id": "bg_img",
          "label": "Background Image"
        },
	    {
          "type": "text",
          "id": "block_heading",
          "label": "Block Heading"
        },
        {
          "type": "text",
          "id": "btn_label",
          "label": "Button Label"
        },
        {
          "type": "text",
          "id": "btn_url",
          "label": "Button URL"
        }      
      ]
  }
  ] ,
  "presets": [
  {
    "name": "Collection Two Column"
  }
  ]
}
{% endschema %}